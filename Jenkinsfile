pipeline {
  agent any
  stages {
    stage('plan') {
      steps {
        echo 'i have to plan my application'
      }
    }

    stage('code') {
      steps {
        echo 'i have to build my application '
        echo 'i have to write the code for my application'
      }
    }

    stage('build') {
      steps {
        echo 'i have to build my application'
      }
    }

    stage('test') {
      steps {
        echo 'i have to test my application'
      }
    }

    stage('deploy') {
      steps {
        echo 'i have to deploy my application'
      }
    }

    stage('release') {
      steps {
        echo 'i have to release my application'
      }
    }

    stage('operate') {
      steps {
        echo 'i have to operate my application'
      }
    }

  }
}